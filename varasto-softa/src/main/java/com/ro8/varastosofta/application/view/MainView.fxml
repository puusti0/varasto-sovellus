<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="%navigation.file">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#kasitteleKirjauduUlos" text="%navigation.logout" />
                    <MenuItem mnemonicParsing="false" onAction="#kasitteleLopeta" text="%navigation.quit" />
                  </items>
                </Menu>
                <Menu fx:id="viewMenu" mnemonicParsing="false" text="%navigation.view" />
                <Menu mnemonicParsing="false" text="%navigation.help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="%navigation.info" />
                  </items>
                </Menu>
              </menus>
               <HBox.margin>
                  <Insets right="100.0" />
               </HBox.margin>
            </MenuBar>
            <Button mnemonicParsing="false" onAction="#kasitteleSuomi">
               <graphic>
                  <ImageView fx:id="suomiImageView" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#kasitteleEnglish">
               <graphic>
                  <ImageView fx:id="englishImageView" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#kasitteleMalaysia">
               <graphic>
                  <ImageView fx:id="malaysiaImageView" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
