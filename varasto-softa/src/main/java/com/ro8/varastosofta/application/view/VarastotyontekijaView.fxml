<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ro8.varastosofta.application.controller.VarastotyontekijaViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%navigation.file">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#kasitteleKirjauduUlos" text="%navigation.logout" />
              <MenuItem mnemonicParsing="false" onAction="#close" text="%navigation.quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%navigation.view">
            <items>
              <MenuItem fx:id="lisaaTuoteMenuItem" mnemonicParsing="false" onAction="#handleLisaaTuoteMenuItem" text="%navigation.addProduct" />
              <MenuItem fx:id="tuotelistausMenuItem" mnemonicParsing="false" onAction="#handleTuotelistausMenuItem" text="%navigation.productList" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%navigation.help">
            <items>
              <MenuItem mnemonicParsing="false" text="%navigation.moreInfo" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
